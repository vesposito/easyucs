                     },
                     "scope": {
                        "description": "Block - Scope",
                        "type": "string",
                        "default": "public",
                        "enum": [
                           "public",
                           "private"
                        ]
                     },
                     "id_range_access_control": {
                        "description": "ID Range Access Control of IP Pool Block",
                        "type": "string",
                        "pattern": "^[\\-\\.:_a-zA-Z0-9]{0,16}$"
                     }
                  },
                  "additionalProperties": false,
                  "required": [
                     "from",
                     "size",
                     "prefix"
                  ]
               }
            ]
         },
         "minItems": 1
      }
   },
   "additionalProperties": false,
   "required": [
      "name"
   ]
}