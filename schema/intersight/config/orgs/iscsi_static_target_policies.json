{
   "id": "intersight_config_orgs_iscsi_static_target_policies#",
   "$schema": "http://json-schema.org/draft-07/schema#",
   "title": "EasyUCS intersight config orgs iscsi_static_target_policies section",
   "description": "EasyUCS intersight config orgs iscsi_static_target_policies section JSON schema",
   "type": "object",
   "properties": {
      "comment": {
         "description": "iSCSI Static Target Policy Comments",
         "type": "string",
         "default": ""
      },
      "descr": {
         "description": "iSCSI Static Target Policy Description",
         "type": "string",
         "default": "",
         "pattern": "^$|^[a-zA-Z0-9]+[\\x00-\\xFF]*$",
         "maxLength": 1024
      },
      "name": {
         "description": "iSCSI Static Target Policy Name",
         "type": "string",
         "default": "",
         "pattern": "^[a-zA-Z0-9_.:-]{1,64}$"
      },
      "tags": {
         "description": "iSCSI Static Target Policy Tags",
         "type": "array",
         "items": {
            "description": "iSCSI Static Target Policy Tag",
            "type": "object",
            "properties": {
               "key": {
                  "description": "iSCSI Static Target Policy Tag Key",
                  "type": "string",
                  "default": "",
                  "minLength": 1,
                  "maxLength": 128
               },
               "value": {
                  "description": "iSCSI Static Target Policy Tag Value",
                  "type": "string",
                  "default": "",
                  "minLength": 0,
                  "maxLength": 256
               }
            },
            "additionalProperties": false,
            "required": [
               "key"
            ]
         },
         "minItems": 1
      },
      "target_name": {
         "description": "iSCSI Qualified Name (IQN) or Extended Unique Identifier (EUI) name of the iSCSI target",
         "type": "string",
         "pattern": "^$|^(?:iqn\\.[0-9]{4}-[0-9]{2}(?:\\.[A-Za-z](?:[A-Za-z0-9\\-]*[A-Za-z0-9])?)+(?::.*)?|eui\\.[0-9A-Fa-f]{16})"
      },
      "ip_address": {
         "description": "Deprecated: The IPv4 address assigned to the iSCSI target",
         "type": "string",
         "format": "ipv4"
      },
      "ipv4_address": {
         "description": "The IPv4 address assigned to the iSCSI target",
         "type": "string",
         "format": "ipv4"
      },
      "ipv6_address": {
         "description": "The IPv6 address assigned to the iSCSI target",
         "type": "string",
         "format": "ipv6"
      },
      "ip_protocol": {
         "description": "Type of the IP address requested for iSCSI vNIC - IPv4/IPv6.",
         "type": "string",
         "enum": [
            "IPv4",
            "IPv6"
         ]
      },
      "port": {
         "description": "The port associated with the iSCSI target",
         "type": "integer",
         "minimum": 1,
         "maximum": 65535
      },
      "lun": {
         "description": "LUN Details of Static iSCSI Target",
         "type": "object",
         "properties": {
            "lun_id": {
               "description": "The Identifier of the LUN",
               "type": "integer"
            }
         },
         "additionalProperties": false,
         "required": [
            "lun_id"
         ]
      }
   },
   "additionalProperties": false,
   "required": [
      "name",
      "target_name",
      "port",
      "lun"
   ],
   "allOf": [
      {
         "$comment": "Below is for setting constraints for ip_protocol with value IPv4",
         "if": {
            "properties": {
               "ip_protocol": {
                  "enum": [
                     "IPv4"
                  ]
               }
            },
            "required": [
               "ip_protocol"
            ]
         },
         "then": {
            "oneOf": [
               {
                  "required": [
                     "ip_address"
                  ]
               },
               {
                  "required": [
                     "ipv4_address"
                  ]
               }
            ],
            "not": {
               "required": [
                  "ipv6_address"
               ]
            }
         }
      },
      {
         "$comment": "Below is for setting constraints for ip_protocol with value IPv6",
         "if": {
            "properties": {
               "ip_protocol": {
                  "enum": [
                     "IPv6"
                  ]
               }
            },
            "required": [
               "ip_protocol"
            ]
         },
         "then": {
            "required": [
               "ipv6_address"
            ],
            "not": {
               "required": [
                  "ipv4_address"
               ]
            }
         }
      }
   ]
}